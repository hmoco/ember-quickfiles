{{title model.name}}
<div class='row'>
    <div class='col-sm-5'>
        <h2>{{model.name}} <a id='versionLink' onclick={{action 'changeView'}}>{{concat "(Version: " model.currentVersion ")"}}</a></h2>
    </div>
    <div class='col-sm-7'>
        <div id='toggleBar' class='pull-right'>
            <div class='btn-toolbar m-t-md'>
                <div class='btn-group m-l-xs m-t-xs'>
                    <button class='btn btn-sm btn-primary' {{action 'share'}}>
                        Share
                    </button>
                </div>
                <div class='btn-group m-l-xs m-t-xs'>
                    <button class='btn btn-sm btn-primary' {{action 'download'}}>
                        Download
                    </button>
                </div>
                <div class='btn-group m-l-xs m-t-xs'>
                    <button class='btn btn-sm btn-primary view-button' {{action 'changeView'}}>
                        View
                    </button>
                </div>
                <div class='btn-group m-l-xs m-t-xs'>
                    <button class='btn btn-sm btn-default view-button' {{action 'changeView'}}>
                        Revisions
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
<div class='row'>
    <div class='col-md-3'>
        {{file-browser
            selectedFile=model
            display=displays
            userId=userId
            openFile=(action 'openFile')
        }}
        {{#if isAdmin}}
        <div class="clearfix">
            <label>Tags:</label>
            {{tags-widget 
                addATag=(action 'addTag') 
                removeATag=(action 'removeTag') 
                tags=fileTags
            }}
        </div>
        {{/if}}
    </div>
    <div class='col-md-9'>
        <div id='mfrIframeParent'>
            {{#file-renderer download=model.links.download
                height="1000"}}
            {{/file-renderer}}
        </div>
        <div id='revisionsPanel' class='panel panel-default'>
            <div class='panel-heading clearfix'>
                <h3 class='panel-title'>
                    Revision
                </h3>
            </div>
            <div class='panel-body'>
                <table class='table table-responsive'>
                    <thead>
                        <tr>
                            <th>Version ID</th>
                            <th>Size</th>
                            <th colspan='2'>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{file-version
                         version=versions
                         download='download'}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>